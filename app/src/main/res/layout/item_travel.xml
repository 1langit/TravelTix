<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingHorizontal="20dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_rect"
    android:backgroundTint="@color/body"
    android:elevation="4dp">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Train Name" />

    <TextView
        android:id="@+id/txt_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:text="Class" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/blue"
        android:textSize="18dp"
        android:text="Rp300.000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txt_price"
        android:text="/person" />

    <TextView
        android:id="@+id/txt_time_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_class"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray_txt"
        android:text="08.00" />

    <TextView
        android:id="@+id/txt_time_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_time_origin"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_txt"
        android:text="08.00" />

    <ImageView
        android:id="@+id/v_dir"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignTop="@id/txt_time_origin"
        android:layout_toEndOf="@id/txt_time_origin"
        android:layout_marginHorizontal="12dp"
        android:src="@drawable/img_destination" />

    <TextView
        android:id="@+id/txt_station_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_time_origin"
        android:layout_toEndOf="@id/v_dir"
        android:text="Station name" />

    <TextView
        android:id="@+id/txt_station_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_time_destination"
        android:layout_toEndOf="@id/v_dir"
        android:text="Station name" />

</RelativeLayout>